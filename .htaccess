# Définition des fichiers recherchés par défaut dans un dossier
DirectoryIndex index.php accueil.php

# Active les fonctions de réécriture d'Apache
RewriteEngine On
RewriteBase /

# Réécriture des URLs avec extension .php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [NC,L]

# Rediriger www vers la version non-www
# RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
# RewriteRule ^ https://%1%{REQUEST_URI} [R=301,L]

# Forcer la connexion HTTPS
# RewriteCond %{HTTPS} off
# RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# Gestion de la mise en cache des fichier du site, pour une durée max de 24h
<IfModule mod_headers.c>
    Header set Cache-Control "max-age=86400, public"
</IfModule>